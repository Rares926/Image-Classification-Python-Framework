{
    "dataset_path": "C:/animalsDataset",
    "workspace_path": "C:/Training_data",
    "network": {
        "input_shape": {
            "width": 220,
            "height": 200,
            "depth": 3
        },
        "input_format": {
            "channels": "RGB",
            "data_type": "FLOAT"
        },
        "resize": {
            "method": "CROP",
            "params": {
                "tl_ratio": 0.1,
                "br_ratio": 0.1
            }
        }
    },
    "optimizer": {
        "name": "Adam",
        "lr": {
            "value": 0.01,
            "schedule": "ExponentialDecay",
            "params": {
                "decay_steps": 10000,
                "decay_rate": 0.9
            }
        },
        "params": {
            "grad_clip": 0.5,
            "beta_1": 0.9,
            "beta_2": 0.999,
            "decay": 0,
            "amsgrad": "False"
        }
    },
    "augmentations":[
        {
            "name":"horizontalFlip",
            "params":{
                "p":0.8
            }
        },
        
        {
            "name":"RandomCrop",
            "params":{
                "width":220,
                "height":200

            }
        }

    ],


    "metrics":["accuracy"]

}